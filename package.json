{
  "name": "eslint-plugin-better-cap-config",
  "version": "0.0.2",
  "description": "ESLint plugin to detect deprecated SAP CAP configurations",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "sap",
    "cds",
    "cap-js",
    "sap-cap"
  ],
  "author": "Mauricio Lauffer",
  "license": "MIT",
  "homepage": "https://github.com/mauriciolauffer/eslint-plugin-better-cap-config#readme",
  "packageManager": "pnpm@10.12.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "docs/"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "pnpm build && vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:lint:json": "eslint -c eslint.json-test.config.js",
    "lint": "eslint --cache && prettier . --check --cache",
    "lint:fix": "eslint --cache --fix && prettier . --write",
    "lint:ci": "eslint --quiet -f @microsoft/eslint-formatter-sarif -o eslint.sarif",
    "lint:json:stats": "SET TIMING=all && eslint -c eslint.json-test.config.js"
  },
  "devDependencies": {
    "@humanwhocodes/momoa": "^3.3.9",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.18.1",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.35.0",
    "eslint-config-mlauffer-nodejs": "^3.1.0",
    "eslint-plugin-eslint-plugin": "^7.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@eslint/json": ">=0",
    "eslint": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriciolauffer/eslint-plugin-better-cap-config.git"
  },
  "bugs": {
    "url": "https://github.com/mauriciolauffer/eslint-plugin-better-cap-config/issues"
  }
}
