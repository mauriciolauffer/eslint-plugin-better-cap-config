{
  "name": "my-sap-cap-app",
  "version": "1.0.0",
  "description": "My SAP CAP Node.js App",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "dependencies": {
    "@cap-js/attachments": "^1.1.8",
    "@cap-js/change-tracking": "^1.0.6",
    "@cap-js/hana": "^1.4.1",
    "@cap-js/notifications": "^0.2.3",
    "@sap/cds": "^8.4.0",
    "@sap/xsenv": "^5.1.0",
    "@sap/xssec": "^3",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1.7.6",
    "@sap/ux-specification": "^1.120.17",
    "eslint": "^9",
    "wdio-qunit-service": "^2"
  },
  "engines": {
    "node": "^20"
  },
  "scripts": {
    "start": "cds-serve",
    "lint": "eslint --cache",
    "undeploy": "cf undeploy my-sap-cap-app --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch": "cds watch"
  },
  "cds": {
    "sql": {
      "native_hana_associations": false
    },
    "features": {
      "odata_new_adapter": false,
      "cds_validate": false
    },
    "fiori": {
      "draft_compat": true
    },
    "requires": {
      "[production]": {
        "db": "hana",
        "auth": "xsuaa",
        "telemetry": {
          "kind": "to-cloud-logging"
        }
      },
      "[hybrid]": {
        "db": "hana"
      },
      "notifications": {
        "destination": "SAP_Notifications",
        "[hybrid]": {
          "kind": "notify-to-rest"
        }
      }
    },
    "launchpad": {
      "version": "1.125.1"
    }
  },
  "sapux": [
    "app/customers",
    "app/products"
  ]
}
